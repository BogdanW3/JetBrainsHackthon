<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>rs.sljivicbusiness.reggin</id>

  <!-- Public plugin name -->
  <name>Regex &amp; Git Inspector</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="dev@sljivicbusiness.rs" url="https://sljivicbusiness.rs">Sljivic Business</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager. Must be >= 40 chars. -->
  <description>Provides inline explanations for regular expressions and an editor action to explain selected regexes, and a git diff explanation action, powered by OpenAI.</description>

  <!-- Product and plugin compatibility requirements. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
      <documentationProvider
              implementation="rs.sljivicbusiness.reggin.hover.RegexHoverProvider"/>
      <applicationConfigurable
              parentId="tools"
              instance="rs.sljivicbusiness.reggin.settings.OpenAISettingsConfigurable"
              id="rs.sljivicbusiness.reggin.settings.OpenAISettingsConfigurable"
              bundle="messages.PluginBundle"
              key="settings.openai.displayName"/>
  </extensions>
  <actions>
    <action id="ExplainRegex"
            class="rs.sljivicbusiness.reggin.action.ExplainRegexAction">
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </action>

    <action id="ExplainDiff"
            class="rs.sljivicbusiness.reggin.action.ExplainDiffAction">
        <add-to-group group-id="Vcs.Log.ContextMenu" anchor="last"/>
    </action>

  </actions>
  <resource-bundle>messages.PluginBundle</resource-bundle>
</idea-plugin>